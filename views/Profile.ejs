<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <style>
      .profile-Container {
        height: 93vh;
      }
      .image {
        border-radius: 50%;
      }
      .profile-Box {
        box-shadow: -10px 10px 0px 0px #a2a2a2;
      }
    </style>
  </head>
  <body>
    <%- include("Nav") %>
    <section class="profile-Container flex justify-center items-center">
      <div
        class="profile-Box h-auto w-auto py-10 px-4 rounded-xl bg-gray-200 box-border flex flex-col justify-center items-center flex-wrap gap-6"
      >
        <div
          class="h-auto w-auto flex justify-center items-center flex-wrap gap-4"
        >
          <div class="h-56 border-black">
            <img
              class="image h-full w-56 border-green-900 border-2"
              src="../Assets/header.webp"
              alt="Profile Picture"
            />
          </div>
          <div
            class="p-16 rounded-xl bg-green-400 flex flex-col justify-center items-center flex-wrap"
          >
            <p class="text-xl font-medium">Username</p>
            <p class="text-xl font-medium">Useremail</p>
            <p class="text-xl font-medium">Employee of Rubico</p>
          </div>
        </div>
        <div class="flex justify-center items-center flex-wrap gap-2">
          <a href="/Contribute">
            <div
              class="py-8 px-10 bg-green-400 rounded-xl border-2 text-xl font-medium border-green-900"
            >
              Contribution
            </div></a
          >
          <a href="/Cart">
            <div
              class="py-8 px-10 bg-green-400 rounded-xl text-xl font-medium border-2 border-green-900"
            >
              Your Cart
            </div></a
          >
        </div>
      </div>
    </section>
  </body>
</html>
